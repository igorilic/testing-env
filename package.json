{
  "name": "jstest",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src",
    "flow": "flow",
    "prettier": "prettier  \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx|graphql)\" ",
    "format": "yarn prettier --write",
    "validate": "yarn lint && yarn prettier --list-different && yarn flow"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.4.0",
    "flow-bin": "^0.90.0",
    "husky": "^1.3.1",
    "prettier": "^1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn validate"
    }
  }
}
